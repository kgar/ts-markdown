{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "declaration": true
  },
  "lib": ["es2022"],
  "exclude": ["node_modules", "dist", "out", "jest.config.ts", "**/*.test.ts"],
  "typedocOptions": {
    "out": "docs",
    "name": "ts-markdown",
    "entryPoints": ["src/index.ts"],
    "exclude": "**/*+(.test).ts",
    "pluginPages": {
      "pages": [
        {
          "title": "ts-markdown",
          "moduleRoot": true,
          "children": [
            { "title": "Let's Go", "source": "cool.md" },
            { "title": "Link Test", "source": "all-right.md" }
          ]
        }
      ]
    }
  }
}
